    }
    .dashboard-content {
        padding: 20px;
        background-color:  cornsilk;
        margin-top: 20px;
        text-align: justify;
    }
    .tab-pane {
        display: none;
    }
    .tab-pane.active {
        display: block;
    }
    #hometab{
        font-size: 30px;
        color: black;
        text-transform: capitalize;
        padding-top: 45px;
        text-align: center;
        font-family: Georgia, 'Times New Roman', Times, serif;
    }
    .nav-link {
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .jobHiring{
        position: fixed;
        height: 100%;
        width: 97%;
        background-color: rgb(247, 232, 173);
        
    }
    .jobHiringTitle h1{
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-weight: bold;
        font-size: 48px;
        text-align: center;
    }
    .jobHiringContent{
        position: relative;
        height: 480px;
        width: 550px;
        background-color: rgb(192, 184, 151);
        left: 380px;
        overflow-y: scroll;
    }
    .jobHiringContent thead{
        background-color: rgb(211, 192, 115);
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 12px;
        font-weight: bold;
        text-align: center;
        color: black;
    }
    .jobHiringContent tbody td{
        background-color: cornsilk;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 12px;
        text-align: center;
        color: black;
    }
    .jobHiringContent .btn-danger{
        width: 10px;
    }
    .modalButton {
        background-color: #97a196; 
        color: #0c0a0a; 
        padding: 10px 20px; 
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s; 

    }
    .modalButton:hover {
        background-color: rgb(22, 112, 74);
    }
    .select-modal{
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }
    .edit-Name{
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        position: relative;
        top: 100px;
        left: 300px;
        width: 60%;
        padding: 20px;
        border: 20px;
        border-radius: 10px;
        text-align: justify;
        height: 250px;
        background-color: rgb(231, 213, 140);
        overflow-y: scroll;
    }
    .edit-Name .btn-danger{
        width: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 18px;
        
    }
    .links-container {
        display: flex;
        justify-content: space-between;
        position: relative;
        top: 40px;
        right: 35px;
        
    }
    .edit-Name h4{
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        text-align: center;
        font-size: 25px;
        font-weight: bold;
        
    }
    .links-container h6{
        position: relative;
        padding-left: 25px;
        display: flex;
    }   
    .not-bold {
        font-weight: lighter;
    } 
    .universityBack{
        position: fixed;
        height: 100%;
        width: 97%;
        background-color: rgb(247, 232, 173);
    }
    
    .uniTitle h1{
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-weight: bold;
        font-size: 48px;
        text-align: center;
    }
    .uniTable{
        position: relative;
        height: 350px;
        width: 75%;
        background-color: rgb(192, 184, 151);
        left: 200px;
        overflow-y: scroll;
    }
    .uniTable thead{
        background-color: rgb(202, 186, 120);
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 12px;
        font-weight: bold;
        text-align: center;
        color: black;
    }
    .uniTable tbody td{
        background-color: cornsilk;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 12px;
        text-align: center;
        color: black;
    }
    .universityBack input {
        padding: 8px;
        margin-bottom: 20px;
        position: relative;
        left: 200px;
    }
    .select-modal1{
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }
    .bContainer{
        position: relative;
        top: 25px;
        padding-left: 25px;
        background-color: rgb(236, 185, 123);
        height: 85%;
        width: 100%;
        padding: 25px;
        overflow-y: scroll;
        border: 10px;
        border-radius: 3%;
    }
    .bContainer .btn-danger{
        width: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 18px;   
    }
    .imgC,
    .bContainer h1, h6{
        text-align: center;
    }
    .AmodalButton {
        background-color: #97a196; 
        color: #0c0a0a; 
        padding: 10px 20px; 
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s; 

    }
    .AmodalButton:hover {
        background-color: rgb(22, 112, 74);
    }
    .surveyForms{
        position: fixed;
        height: 100%;
        width: 97%;
        background-color: rgb(238, 224, 166);
    }
    .form-group label{
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 20px;
        padding-left: 15px;
        font-weight: bolder;
    }
    .sliderDiv{
        position: fixed;
        left: 22%;
        top: 100px;
        height: 500px;
        width: 760px;
        background-color: rgb(168, 157, 112);
    }
    .carousel{
        justify-content: center;
        position: relative;
        width: 700px;
        height: 450px;
        background-color: cornsilk;
        top: 20px;
        left: 30px;
    }
    .carousel-title h1 {
        justify-content: center;
        padding-top: 150px;
    }
    .FinalYBBackground {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 18px;
        text-align: justify;
    }
    .FinalYBBackground p{
        padding-top: 23px;
    }
</style>
<body>
    <header class="header">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="mfyb">
                    <img src="/pictures/yearbook.png" alt="Logo" width="90" height="80">
                    <a href="#hometab" class="nav-link nav-link-myFinalYearbook active">My Final Yearbook</a>
                    <br>
                </div>
                <nav class="nav">
                    <ul>
                        <li><a href="#surveyTab" class="nav-link nav-link-survey">Survey</a></li>
                        <li><a href="#universitiesTab" class="nav-link nav-link-universities">Universities</a></li>
                        <li><a href="#jobHiringTab" class="nav-link nav-link-jobHiring">Job Hiring</a></li>
                        <li><a href="userlogin">Login</a></li>
                        <li><a href="userres">Register</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div class="container-2">
        
        <div class="tab-content dashboard-content">
            <div class="tab-pane active" id="hometab">
                <%- include ("./partials/message") %> 
                <div class="sliderDiv">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <div class="carousel-title">
                                <h1>My Final Yearbook</h1>
                                <p>Student/Alumni Auth</p>
                            </div> 
                          </div>
                          <div class="carousel-item">
                            <div class="FinalYBBackground">
                                <img src="/pictures/yearbook.png" alt="Logo" width="180" height="200">
                                <p>The Final Yearbook is a Web development that has user coming from Graduating Student and Alumni of a certain university. Whereas the university administratos and its Dean Administrator and Department Chairman Administrator able to tract a Graduated students or even Graduating Student. This is a Dynamic Web Development that the registrations will be base on a heirarchy that will start on University Admin before the other staffs can register.</p>
                            </div>
                          </div>
                          <div class="carousel-item">
                            <img src="/pictures/sampleT5.png" alt="Logo" width="650" height="450">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                </div>
            </div>
            <div class="tab-pane" id="surveyTab">
                <h2>Survey Dashboard</h2>
                <div class="surveyForms">
                    <div class="uniTitle">
                        <h1>Survey</h1>
                    </div>
                    <form action="/survey-Forms" method="post">
                        <div class="form-group">
                            <label for="surveyName">Your Name:</label>
                            <input type="name" class="form-control" id="surveyName" name="surveyName" aria-describedby="name" placeholder="Enter Name">
                        </div>
                        <div class="form-group">
                            <label for="surveyAge">Your Age:</label>
                            <input type="number" id="surveyAge" name="surveyAge" >
                        </div>
                        <div class="form-group">
                            <label for="surveyGender">Gender:</label>
                            <label><input type="radio" name="surveyGender" value="male"> Male</label>
                            <label><input type="radio" name="surveyGender" value="female"> Female</label>
                            <label><input type="radio" name="surveyGender" value="other"> Other</label>
                        </div>
                        <div class="form-group">
                            <label for="surveyFeedback">How are you rate our Web Application?</label>
                            <select class="form-control" id="exampleFormControlSelect1" name="surveyFeedback">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                              </select>
                        </div>
                        <div class="form-group">
                            <label for="surveyComments">Additional Comments:</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" name="surveyComments" rows="3"></textarea>
                        </div>
                        <button type="submit"class="btn btn-primary" >Submit Survey</button>
                    </form>
                </div>
            </div>
            <div class="tab-pane" id="universitiesTab">
                <h2>Universities Dashboard</h2>
                <div class="universityBack">
                    <div class="uniTitle">
                        <h1>Universities</h1>
                    </div>
                    <input type="text" id="searchInput" placeholder="Search...">
                    <div class="uniTable" id="dataTable">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>University Name</th>
                                    <th>Address</th>
                                    <th>Established</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% UniversityBack.forEach(function(backData, indexCounter1){%>
                                    <tr>
                                        <td><%= backData.UnivAddTitle %></td>
                                        <td><%= backData.addressB %></td>
                                        <td><%= backData.UnivEst %></td> 
                                        <td><button type="submit"  class="AmodalButton" >Check Details</button></td>                          
                                    </tr>
                                    <div class="select-modal1" id="selectModal1<%= indexCounter1 %>">
                                        <div class="bContainer">
                                            <button type="submit" class="btn btn-danger" id="closeModal4<%= indexCounter1 %>">X</button>   
                                            <br>
                                            <div class="imgC"><img src="/pictures/noimage.png" alt="Logo" width="220" height="220"></div>
                                            <h1>School Name: <%= backData.UnivAddTitle %></h1>
                                            <h6>Established: <%= backData.UnivEst %></h6>
                                            <h6>Address: <%= backData.addressB %></h6>
                                            <p>Background: <br><%= backData.UBackground %></p>
                                        </div>
                                    </div>  
                                <%});%>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="jobHiringTab">
                <h2>Job Hiring Dashboard</h2>
                <div class="jobHiring">
                    <div class="jobHiringTitle">
                        <h1>Job Hiring Posting</h1>
                    </div>
                    <div class="jobHiringContent" id="table1">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Job Title</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% HireData.forEach(function(hdata, indexCounter) { %>
                                    <tr>
                                        <td><%= hdata.companyName %></td>
                                        <td><%= hdata.jobTitle%></td>   
                                        <td><button type="submit"  class="modalButton" >Check Details</button></td>                          
                                    </tr>
                                    <div class="select-modal" id="selectModal<%= indexCounter %>">
                                        <div class="edit-Name" >
                                            <button type="submit" class="btn btn-danger" id="closeModal3<%= indexCounter %>">X</button>
                                            <h4><%= hdata.companyName %></h4>
                                            <div class="links-container">
                                               <h6>Job Description:  <span class="not-bold"><%=hdata.jobDescription%></span></h6>
                                            </div>
                                            <br>
                                            <div class="links-container">
                                                <h6>Job Requirements:<span class="not-bold"><%=hdata.jobRequirements%></span></h6>
                                            </div>
                                            <br>
                                            <div class="links-container">
                                                <h6>Application Instructions: <span class="not-bold"><%=hdata.applicationInstructions%></span></h6>
                                            </div>
                                            <br>
                                            <div class="links-container">
                                                <h6>Contact Persons Name: <span class="not-bold"><%=hdata.contactName%><</span>/h6>
                                            </div>
                                            <br>
                                            <div class="links-container">
                                                <h6>Contact Persons Number: <span class="not-bold"><%=hdata.contactNumber%></span></h6>
                                            </div>
                                            <br>
                                            <div class="links-container">
                                                <h6>Contact Persons Email: <span class="not-bold"><%=hdata.contactEmail%></span></h6>
                                            </div>
                                        </div>
                                    </div>  
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Function to toggle the tabs
        function toggleTab(tabId) {
            // Hide all tab panes
            $('.tab-pane').removeClass('active');

            // Show the selected tab
            $(tabId).addClass('active');
        }

        // Click event for tab links
        $('.nav-link').click(function (e) {
            e.preventDefault();
            var tabId = $(this).attr('href');
            toggleTab(tabId);
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            
            const modalChoiceBtns = document.querySelectorAll('.modalButton');
            modalChoiceBtns.forEach((modalChoiceBtn, indexCounter) => {
                const selectModal = document.getElementById(`selectModal${indexCounter}`);
                const closeModalBtn3 = document.getElementById(`closeModal3${indexCounter}`);
                modalChoiceBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    selectModal.style.display = 'block';
                });
                closeModalBtn3.addEventListener('click', () => {
                    selectModal.style.display = 'none';
                });
                
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {       
            const modalChoiceBtns1 = document.querySelectorAll('.AmodalButton');
            modalChoiceBtns1.forEach((modalChoiceBtn1, indexCounter1) => {
                const selectModal2 = document.getElementById(`selectModal1${indexCounter1}`);
                const closeModalBtn4 = document.getElementById(`closeModal4${indexCounter1}`);
                modalChoiceBtn1.addEventListener('click', (e) => {
                    e.preventDefault();
                    selectModal2.style.display = 'block';
                });
                closeModalBtn4.addEventListener('click', () => {
                    selectModal2.style.display = 'none';
                });
                
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const tableRows = document.querySelectorAll('#dataTable tbody tr');
    
            searchInput.addEventListener('input', function() {
                const searchTerm = searchInput.value.toLowerCase();
    
                tableRows.forEach(function(row) {
                    const universityName = row.querySelector('td:first-child').textContent.toLowerCase();
                    const address = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                    const established = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
    
                    const match = universityName.includes(searchTerm) ||
                                  address.includes(searchTerm) ||
                                  established.includes(searchTerm);
    
                    row.style.display = match ? '' : 'none';
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
          $(".alert").not(".alert-success-msg").delay(3000).fadeOut(300, function () {
            $(this).alert('close');
          });
      
          $(".alert-success-msg").delay(5000).fadeOut(300);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>
