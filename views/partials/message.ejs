<% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function(error){ %>
        
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <li><%= error.msg %></li>
        </div>
    <% }); %>
<% } %>

<% if(success_msg != '') { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">       
         <li><%= success_msg %></li>
    </div>

<% } %>

<% if(error_msg != '') { %>
    
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
         <li><%= error_msg %></li>
    </div>

<% } %>

<% if(error != '') { %>
    
    <div class="alert alert-danger alert-dismissible fade show" role="alert">  
         <li><%= error %></li>
    </div>

<% } %>