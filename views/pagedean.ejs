                                    <label for="jobRequirements">Job Requirements:</label>
                                    <textarea id="jobRequirements" class="form-control" name="jobRequirements" ></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="applicationInstructions">Application Instructions:</label>
                                    <textarea id="applicationInstructions" class="form-control" name="applicationInstructions" ></textarea>
