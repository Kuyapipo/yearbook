                </tbody> 
            </table>  
        </nav>
        <div class="container-fluid2">
            <div class="tab-content dashboard-content">
                <div class="tab-pane active" id="fc">
                    <%- include ("./partials/message") %> 
                    <p1>*Faculty or Courses that includes faculty handler and its students</p1>
                </div>
                <div class="tab-pane" id="acd">
                    <p1>*Adding Courses/Faculty name to the database and to be posted on registration for Alumni/Graduating Student</p1>
                    <div class="addDContent">
                        <div class="scrollable-table1" id="table2"  >
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th>University</th>                                  
                                        <th>Department</th>
                                        <th>Courses/Faculty</th>
                                        <th>Date Registered</th>
                                        <th>Deploy</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% facultyData.forEach(function(fdata) { %>
                                        <% if (fdata.changeStatusF === 'Pending') { %>
                                            <% if (fdata.addFUniversity === schoolType ){ %>
                                                <tr>
                                                    <td><%= fdata.addFUniversity %></td>
                                                    <td><%= fdata.addFDepartment %></td>
                                                    <td><%= fdata.addFaculty%></td>
                                                    <td><%= fdata.dateFRegistered.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                    <td>
                                                        <form action="/deanadmin/updatefacultystatus/<%= fdata._id %>" method="POST" >
                                                            <select class="custom-select" name="changeStatusF">
                                                                <option value="<%= fdata.changeStatusF %>"><%= fdata.changeStatusF %></option>
                                                                <option value="Active">Active</option>
                                                            </select>
                                                            <button type="submit" class="btn btn-outline-success">Update</button>
                                                            
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% } %>
                                            
                                        <% } %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <div class="scrollable-table1" id="table3"  >
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th>University</th>                                  
                                        <th>Department</th>
                                        <th>Courses/Faculty</th>
                                        <th>Date Registered</th>
                                        <th>Deployed</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% facultyData.forEach(function(fdata) { %>
                                        <% if (fdata.changeStatusF === 'Active') { %>
                                            <% if (fdata.addFUniversity === schoolType ){ %>
                                                <tr>
                                                    <td><%= fdata.addFUniversity %></td>
                                                    <td><%= fdata.addFDepartment %></td>
                                                    <td><%= fdata.addFaculty%></td>
                                                    <td><%= fdata.dateFRegistered.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                    <td>
                                                        <form action="/deanadmin/updatefacultystatus/<%= fdata._id %>" method="POST">
                                                            <button type="submit" name="changeStatusF" value="Remove" class="btn btn-outline-danger">Remove</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% } %>
                                            
                                        <% } %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="afa">
                    <p1>*Active Faculty admins credentials</p1>
                    <div class="scrollable-table" id="table1"  >
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>University</th>
                                    <th>ID Number</th>
                                    <th>Full Name</th>
                                    <th>Institutional Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Department</th>
                                    <th>Course/Faculty</th>
                                    <th>Documents</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allUserData.forEach(function(user) { %>
                                    <% if (user.schoolType === schoolType) { %>
                                        <% if (user.status === 'Active'&& user.department === department) { %>
                                            <tr>
                                                <td><%= user.schoolType %></td>
                                                <td><%= user.idnumber %></td>
                                                <td><%= user.fullname %></td>
                                                <td><%= user.iemail %></td>     
                                                <td><%= user.dateOfbirth.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                <td><%= user.department %></td>
                                                <td><%= user.courseType %></td>
                                                <td><%= user.fileDocu %></td>
                                                <td>
                                                    <form action="/deanadmin/updatestatus/<%= user._id %>" method="POST">
                                                        <select class="custom-select" name="status">
                                                            <option value="<%= user.status %>"><%= user.status %></option>
                                                            <option value="Pending">Pending</option>
                                                            <option value="Decline">Decline</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-outline-success">Update</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="pfa">
                    <p1>*Pending Faculty admins credentials</p1>
                    <div class="scrollable-table" id="table1"  >
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>University</th>
                                    <th>ID Number</th>
                                    <th>Full Name</th>
                                    <th>Institutional Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Department</th>
                                    <th>Course/Faculty</th>
                                    <th>Documents</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allUserData.forEach(function(user) { %>
                                    <% if (user.schoolType === schoolType) { %>
                                        <% if (user.status === 'Pending' && user.department === department) { %>
                                            <tr>
                                                <td><%= user.schoolType %></td>
                                                <td><%= user.idnumber %></td>
                                                <td><%= user.fullname %></td>
                                                <td><%= user.iemail %></td>     
                                                <td><%= user.dateOfbirth.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                <td><%= user.department %></td>
                                                <td><%= user.courseType %></td>
                                                <td><%= user.fileDocu %></td>
                                                <td>
                                                    <form action="/deanadmin/updatestatus/<%= user._id %>" method="POST">
                                                        <select class="custom-select" name="status">
                                                            <option value="<%= user.status %>"><%= user.status %></option>
                                                            <option value="Active">Active</option>
                                                            <option value="Decline">Decline</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-outline-success">Update</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="dfa">
                    <p1>*Decline Faculty admins credentials</p1>
                    <div class="scrollable-table" id="table1"  >
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>University</th>
                                    <th>ID Number</th>
                                    <th>Full Name</th>
                                    <th>Institutional Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Department</th>
                                    <th>Course/Faculty</th>
                                    <th>Documents</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allUserData.forEach(function(user) { %>
                                    <% if (user.schoolType === schoolType) { %>
                                        <% if (user.status === 'Decline'&& user.department === department) { %>
                                            <tr>
                                                <td><%= user.schoolType %></td>
                                                <td><%= user.idnumber %></td>
                                                <td><%= user.fullname %></td>
                                                <td><%= user.iemail %></td>
                                                <td><%= user.dateOfbirth.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                <td><%= user.department %></td>
                                                <td><%= user.courseType %></td>
                                                <td><%= user.fileDocu %></td>
                                                <td>
                                                    <form action="/deanadmin/updatestatus/<%= user._id %>" method="POST">
                                                        <select class="custom-select" name="status">
                                                            <option value="<%= user.status %>"><%= user.status %></option>
                                                            <option value="Pending">Restore to Pending</option>
                                                            <option value="Delete">Delete</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-outline-success">Update</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                    
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="dap">
