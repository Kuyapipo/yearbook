<body>
    <% if(userType==='Dean'){ %>
        <div class="container-fluid">
            <header class="header">
                <div class="header-container">
                    <img src="/pictures/yearbook.png" alt="Logo" width="90" height="80">
                    <div class="headN">
                        <h6>The Final Yearbook</h6>
                        <h1><%= schoolType%>(<%=department%>)</h1>
                    </div>
                    
                    <div class="NameHead">
                        <div class="pclass"><p><%=userType%> Admin</p><br></div>
                        
                        <p>Welcome <%= fullname %></p>
                        <a href="/deanadmin/logout" class="btnCustom">
                            Logout
                        </a>
                    </div>
                </div>
            </header>
        </div>
        <nav  class="navbar">
            <table class="table table-bordered" id="modTable">
                <tbody>
                    <tr>
                        <th><a href="#fc"  class="nav-link nav-link-aboutU active">Department Chairman</a></th>
                        <th><a href="#acd" class="nav-link nav-link-acd">Add Department Name</a></th>
                        <th><a href="#afa" class="nav-link nav-link-afa">Active Department Chair Account</a></th>
                        <th><a href="#pfa" class="nav-link nav-link-pfa">Pending Department Chair Account</a></th>
                        <th><a href="#dfa" class="nav-link nav-link-dfa">Declined Department Chair Account</a></th>
                        <th><a href="#dap" class="nav-link nav-link-dap">Dean Admin Profile</a></th> 
                        <th><a href="#hc" class="nav-link nav-link-hc">Hiring Company Posting</a></th> 
                    </tr>
                </tbody> 
            </table>  
        </nav>
        <div class="container-fluid2">
            <div class="tab-content dashboard-content">
                <div class="tab-pane active" id="fc">
                    <%- include ("./partials/message") %> 
                    <p1>*Faculty or Courses that includes faculty handler in this department</p1>
                    <div class="facultyList">
                        <div class="scrollable-table1" id="table5"  >
                            <table class="table table-dark table-hover">
                                <thead>
                                    <div class="headTitle">
                                        <h6><%=department%></h6>
                                    </div>
                                    <tr>
                                        <th></th>  
                                        <th>Department</th>                                  
                                        <th>Chairman Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let counter = 1;%>
                                    <% allUserData.forEach(function(user) { %>
                                        <% if (user.schoolType=== schoolType) { %>
                                            <% if (user.department === department && user.status !== 'Pending'){ %>
                                                <tr>
                                                    <td><%=counter++%></td>
                                                    <td><%=user.courseType%></td>
                                                    <td><%=user.fullname%></td>
                                                </tr>
                                            <% } %>
                                        <% } %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="acd">
                    <p1>*Adding Courses/Faculty name to the database and to be posted on registration for Alumni/Graduating Student</p1>
                    <div class="addDContent">
                        <div class="scrollable-table1" id="table2"  >
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th>Department</th>
                                        <th>Date Registered</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% facultyData.forEach(function(fdata) { %>                        
                                            <% if (fdata.addFUniversity === schoolType && fdata.addFDepartment === department){ %>
                                                <tr>
                                                    <td><%= fdata.addFaculty%></td>
                                                    <td><%= fdata.dateFRegistered.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                    <td>
                                                        <form action="/deanadmin/updatefacultystatus/<%= fdata._id %>" method="POST" >
                                                            <select class="custom-select <%= fdata.changeStatusF === 'Active' ? 'text-green' : (fdata.changeStatusF === 'Pending' ? 'text-red' : '') %>" name="changeStatusF">
                                                                <option value="<%= fdata.changeStatusF %>"><%= fdata.changeStatusF %></option>
                                                                <option value="Active">Active</option>
                                                                <option value="Pending">Pending</option>
                                                                <option value="Remove">Remove</option>
                                                            </select>
                                                            <button type="submit" class="btn btn-outline-dark">Update</button>
                                                            
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% } %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="afa">
                    <p1>*Active Faculty admins credentials</p1>
                    <div class="scrollable-table" id="table1"  >
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>College</th>
                                    <th>Department</th>
                                    <th>ID Number</th>
                                    <th>Department Chair Name</th>
                                    <th>Institutional Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Documents</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allUserData.forEach(function(user) { %>
                                    <% if (user.schoolType === schoolType) { %>
                                        <% if (user.status === 'Active'&& user.department === department) { %>
                                            <tr>
                                                <td><%= user.department %></td>
                                                <td><%= user.courseType %></td>
                                                <td><%= user.idnumber %></td>
                                                <td><%= user.fullname %></td>
                                                <td><%= user.iemail %></td>     
                                                <td><%= user.dateOfbirth.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) %></td>
                                                <td><%= user.fileDocu %></td>
                                                <td>
                                                    <form action="/deanadmin/updatestatus/<%= user._id %>" method="POST">
                                                        <select class="custom-select" name="status">
                                                            <option value="<%= user.status %>"><%= user.status %></option>
                                                            <option value="Pending">Pending</option>
                                                            <option value="Decline">Decline</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-outline-success">Update</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="pfa">
                    <p1>*Pending Faculty admins credentials</p1>
                    <div class="scrollable-table" id="table1"  >
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>College</th>
                                    <th>Department</th>
                                    <th>ID Number</th>
                                    <th>Department Chair Name</th>
                                    <th>Institutional Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Documents</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allUserData.forEach(function(user) { %>
                                    <% if (user.schoolType === schoolType) { %>
                                        <% if (user.status === 'Pending' && user.department === department) { %>
                                            <tr>
                                                <td><%= user.department %></td>
